/* miniprogram/pages/category/category.wxss */
.page{
  display: flex;
}
.left{
  width: 25%;
  display: flex;
  flex-direction: column;
  height: 100vh;
  overflow-y: auto;
}
.menu{
  padding:50rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  background: #fff;
}
.nomenu{
  padding:50rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  background: #ccc;
}
.select{
  width: 10rpx;
  height: 50rpx;
  background: #1296db;
  position: absolute;
  left: 0;
}
.menuname{
  font-size: 28rpx;
  color: #1296db;
}
.nomenuname{
  font-size: 28rpx;
  color: #333;
}
.right{
  width:75%;
  max-height: 100vh;
  overflow-y: auto;
  justify-content: space-around;
  background: #fff;
}
.box{
  width: 180rpx;
  height: 180rpx;
  float: left;
  margin-left:6rpx;
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.imgbox{
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  overflow:hidden;
}
.img{
  width:100%;
  height: 100%;
}
.name{
  margin-top:20rpx;
  font-size: 24rpx;
}