/* miniprogram/pages/home/home.wxss */
.page{
  padding:0 30rpx;
}
.swiper{
  height: 350rpx;
  background: lightsteelblue;
}
.banner{
  width: 100%;
  height: 100%;
}
.search{
  height: 80rpx;
  display: flex;
  margin: 30rpx 0;
  position: relative;
}
.searchInp{
  height: 80rpx;
  border: 1px #1296db solid;
  border-radius: 10rpx;
  font-size: 28rpx;
  padding:0 20rpx;
  position: absolute;
  left: 0;
  right: 0;
}
.searchbtn{
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  right: 80rpx;
  top:1px;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}
.refresh{
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  right: 0;
  top:1px;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}
.searchicon{
  line-height: 80rpx;
  color: #ccc;
}
.refreshicon{
  line-height: 80rpx;
  color: #1296db;
}
.con{
  height: auto;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.box{
  width: 48%;
  border: 1px #f5f5f5 solid;
  margin:10rpx 0;
  background: #fff;
  display: flex;
  flex-direction: column;
}
.imgbox{
  height: 200rpx;
  border-radius: 20rpx;
}
.img{
  width: 100%;
  height: 100%;
}
.pri{
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color: red;
  text-indent: 20rpx;
}
.name{
  color: #1296db;
}
.empty{
  width: 100%;
  height:600rpx;
}
.emptyimg{
  width: 100%;
  height: 100%;
}