/* miniprogram/pages/my/my.wxss */
.banner{
  height: 350rpx;
  background: #1296db;
  display: flex;
  align-items: center;
  padding-left:30rpx;
  margin-bottom:20rpx;
}
.imgbox{
  width:120rpx;
  height:120rpx;
  border: none;
  border-radius: 60rpx;
  overflow: hidden;
}
.img{
  width:100%;
  height: 100%;
}
.loginbox{
  width: 300rpx;
  height:40px;
}
.login{
  border: 1px #fff solid;
  color: #fff;
  text-align: center;
  margin-left: 30rpx;
}
.nickname{
  color: #fff;
  font-size: 34rpx;
  margin-left: 30rpx;
  line-height: 30px;
}
.content{
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px #ccc solid;
  position: relative;
  background: #fff;
}
.last{
  border: none;
}
.icon{
  line-height:26px;
}
.tip{
  margin-left:20rpx;
  font-size: 28rpx;
  color: #333;
}
.arrowright{
  position: absolute;
  right: 30rpx;
}